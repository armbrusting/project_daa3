<table summary="Style in Collection">
  <tr>
    <td class="main">
		<h1><%= @collection.id %> | <%= @style.number %> | <%= @collection.status %></h1>
			<ul>
				<li><%= link_to "Return to " + @folder.name, folder_collections_path(@folder)%></li>
				<li><%= link_to "Add another Style to " + @folder.name, folder_styles_path(@folder.id)%></li>
				<li><%= link_to "Printable P.O. (PDF)", collection_path(@collection, :format => 'pdf') %></li>
				<li><%= link_to "Edit", edit_collection_path %></li>
			</ul>	
		<% if @collection.status == "new" %>
			<%= render 'info', :collection => @collection %>
		<% elsif @collection.status == "updated" %>
			<%= render 'info', :collection => @collection %>
		<% elsif @collection.status == "returned" %>
			<%= render 'info', :collection => @collection %>
		<% elsif @collection.status == "agreed" %>
		<%= render 'approval', :collection => @collection %>
		<% elsif @collection.status == "approved" %>
		<%= render 'production', :collection => @collection %>
		<% elsif @collection.status == "shipped" %>
		<%= render 'shipping', :collection => @collection %>
		<% else %>
		<%= render 'delivered', :collection => @collection %>		
		<% end %>
	</td>
	<td class="sidebar round">
		<%= render 'sidebar' %>	
	
    </td>
  </tr>
</table>	