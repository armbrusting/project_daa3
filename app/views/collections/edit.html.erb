				</div>
				<% end %>
				<div class="field">
				  <%= f.label :print_approval %><br />
				  <%= f.radio_button :print_approval, "yes", :onchange => 'this.form.submit();'  %> Yes<br />
				  <%= f.radio_button :print_approval, "no", :onchange => 'this.form.submit();'  %> No<br />
				  <%= f.radio_button :print_approval, "n/a", :onchange => 'this.form.submit();'  %> N/A<br />
				</div>
				<% if f.object.quality_approval == "yes" %>
				<div class="field">
				  <%= f.label :quality_approval_note %><br />
				  <%= f.object.quality_approval_note %>
				</div>
				<div class="fields">
				  <%= f.label :quality_approval_date %><br />
				  <%= f.object.quality_approval_date %>
				</div>
				<% elsif f.object.quality_approval == "no" %>
				<div class="field">
				  <%= f.label :quality_approval_note %><br />
				  <%= f.text_area :quality_approval_note %>
				</div>
				<div class="fields">
				  <%= f.label :quality_approval_date %><br />
				  <%= f.date_select :quality_approval_date, :default => Time.now %>
				</div>
				<% end %>
				<div class="field">
				  <%= f.label :quality_approval %><br />
				  <%= f.radio_button :quality_approval, "yes", :onchange => 'this.form.submit();'  %> Yes<br />
				  <%= f.radio_button :quality_approval, "no", :onchange => 'this.form.submit();'  %> No<br />
				  <%= f.radio_button :quality_approval, "n/a", :onchange => 'this.form.submit();'  %> N/A<br />
				</div>
				<div class="field">
				  <%= f.label :factory_start_date %><br />
				  <%= f.date_select :factory_start_date %>
				</div>
				<div class="fields">
				  <%= f.label :ex_factory_date %><br />
				  <%= f.date_select :ex_factory_date %>
				</div>
				<% if f.object.pp_approval == "yes" %>
				<div class="field">
				  <%= f.label :pp_approval_note %><br />
				  <%= f.object.pp_approval_note %>
				</div>
				<div class="fields">
				  <%= f.label :pp_approval_date %><br />
				  <%= f.object.pp_approval_date %>
				</div>
				<% elsif f.object.pp_approval == "no" %>
				<div class="field">
				  <%= f.label :pp_approval_note %><br />
				  <%= f.text_area :pp_approval_note %>
				</div>
				<div class="fields">
				  <%= f.label :pp_approval_date %><br />
				  <%= f.date_select :pp_approval_date, :default => Time.now %>
				</div>
				<% end %>
				<div class="field">
				  <%= f.label :pp_approval %><br />
				  <%= f.radio_button :pp_approval, "yes", :onchange => 'this.form.submit();'  %> Yes<br />
				  <%= f.radio_button :pp_approval, "no", :onchange => 'this.form.submit();'  %> No<br />
